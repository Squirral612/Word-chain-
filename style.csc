*{margin:0;padding:0;box-sizing:border-box;font-family:-apple-system,BlinkMacSystemFont,"Segoe UI",Roboto}
body{display:flex;justify-content:center;background:#f6f8fa;padding:20px}
#app{width:100%;max-width:360px;text-align:center}
h1{margin-bottom:20px;color:#333}
button,input{padding:10px 14px;margin:6px;border:1px solid #ccc;border-radius:6px;font-size:16px}
button[disabled]{opacity:.4}
#history{max-height:200px;overflow-y:auto;margin:10px 0;text-align:left;background:#fff;border:1px solid #ddd;padding:10px;border-radius:6px}
#history div{margin:1px 0}
